{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "target": "ES2019",
    "types": [
      "node"
    ],
    "allowJs": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "paths": {
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@types/*": [
        "types/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
